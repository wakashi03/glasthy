<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold"><%= t '.title' %></h1>
    </div>
    <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <%= form_with(url: login_path, local: true, html: { class: "card-body" }) do |f| %>
        <div class="form-control">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.email_field :email, class: "input input-bordered", required: true %>
        </div>
        <div class="form-control">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: "input input-bordered", required: true %>
          <label class="label">
            <%= link_to (t '.to_register_page'), new_user_path %>
            <a href="#"><%= t '.password_forget' %></a>
          </label>
        </div>
        <div class="form-control mt-6">
          <%= f.submit (t 'defaults.login'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>