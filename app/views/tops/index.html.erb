    </div>
  </section>

  <section class="examples p-10">
    <h2 class="text-2xl font-bold mb-4 text-center">川柳を投稿してみましょう</h2>
    <div class="text-center">
      <%= link_to t('senryus.new.title'), new_senryu_path, class: "btn btn-lg px-8 py-4 text-lg inline-block" %>
    </div>
  </section>
</main>