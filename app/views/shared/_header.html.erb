<div class="navbar bg-base-100">
  <div class="flex-1">
    <%= link_to 'ごしちで', root_path, class: 'btn btn-ghost text-xl link' %>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal p-0">
      <%= link_to t('senryus.new.title'), new_senryu_path, class: 'menu-item link mr-4' %>
      <%= link_to t('senryus.index.title'), senryus_path, class: 'menu-item link mr-4' %>
      <%= link_to t('senryus.favorites.title'), favorites_senryus_path, class: 'menu-item link mr-4' %>
