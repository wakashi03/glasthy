<div class="navbar bg-base-100">
  <div class="flex-1">
    <%= link_to 'ごしちで', root_path, class: 'btn btn-ghost text-xl link' %>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal p-0">
      <%= link_to t('senryus.new.title'), new_senryu_path, class: 'menu-item link mr-4' %>
      <%= link_to t('senryus.index.title'), senryus_path, class: 'menu-item link mr-4' %>
      <%= link_to t('senryus.favorites.title'), favorites_senryus_path, class: 'menu-item link mr-4' %>
      <%= link_to t('senryus.ranking.title'), senryus_ranking_path, class: 'menu-item link mr-4' %>
    </ul>
  </div>
  <div class="dropdown dropdown-end">
    <div tabindex="0" role="button" class="btn btn-ghost btn-circle icon">
      <div class="w-10 rounded-full">
        <%= image_tag(current_user.icon_url, alt: "user icon", class: "w-10 rounded-full") %>
      </div>
    </div>
    <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
      <%= link_to (t 'profiles.show.title'), profile_path %>
      <%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete }  %>
      <%= link_to (t 'senryus.user_senryus.title'), user_senryus_senryus_path %>
    </ul>
  </div>
</div>