<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold"><%= t '.title' %></h1>
    </div>
    <div class="card shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <%= form_with(model: @user, local: true, html: {class: 'card-body'}) do |f| %>
        <div class="form-control">
          <%= f.label :name %>
          <%= f.text_field :name, class: "input input-bordered", required: true %>
        </div>
        <div class="form-control">
          <%= f.label :email %>
          <%= f.email_field :email, class: "input input-bordered", required: true %>
        </div>
        <div class="form-control">
          <%= f.label :password %>
          <%= f.password_field :password, class: "input input-bordered", required: true %>
        </div>
        <div class="form-control">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "input input-bordered", required: true %>
        </div>
        <div class="form-control mt-6">
          <%= f.submit (t 'defaults.register'), class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to (t '.to_login_page'), login_path %>
      </div>
    </div>
  </div>
</div>