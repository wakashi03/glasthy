<div id="<%= dom_id senryu %>" class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto">
  <p class="text-2xl font-semibold text-gray-900">
    <%= link_to senryu.kamigo, senryu_path(senryu) %>
  </p>
  <p class="text-2xl font-semibold text-gray-900 mt-2">
    <%= link_to senryu.nakashichi, senryu_path(senryu) %>
  </p>
  <p class="text-2xl font-semibold text-gray-900 mt-2">
    <%= link_to senryu.shimogo, senryu_path(senryu) %>
  </p>
  <p class="text-right text-sm text-gray-500 mt-4">
    <%= senryu.user.name %>
  </p>
  <% if current_user.own?(senryu) %>
    <%= render 'crud_menus', senryu: senryu %>
  <% else %>
    <%= render 'favorite_button', senryu: senryu  %>
  <% end %>
</div>