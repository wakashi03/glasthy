<% content_for(:title, t('.title')) %>
<div class="container mx-auto pt-5">
  <div class="mb-3 flex flex-wrap">
    <div class="w-full lg:w-8/12 lg:mx-auto">
      <h1 class="text-2xl font-bold"><%= t('.title') %></h1>
      <article class="card bg-white shadow-xl">
        <div class="card-body p-6">
          <div class='flex flex-wrap'>
            <div class='w-full md:w-9/12'>
              <%= render 'crud_menus', senryu: @senryu %>
              <%= @senryu.kamigo %>
              <%= @senryu.nakashichi %>
              <%= @senryu.shimogo %>
              <div class="mt-4">
                <ul class="list-none">
                  <li class="inline mr-2">by <%= @senryu.user.name %></li>
                  <li class="inline"><%= l @senryu.created_at, format: :long  %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>

  <%= render 'comments/form', { senryu: @senryu, comment: @comment } %>

  <%= render 'comments/comments', { comments: @comments } %>
</div>